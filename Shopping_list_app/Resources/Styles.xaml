<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ShoppingListApp.Resources.Styles">

    <!-- Kolory -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="SecondaryColor">#FF5722</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#000000</Color>

    <!-- Czcionki -->
    <OnPlatform x:Key="DefaultFontFamily" x:TypeArguments="x:String">
        <On Platform="iOS" Value="HelveticaNeue" />
        <On Platform="Android" Value="sans-serif" />
        <On Platform="WinUI" Value="Segoe UI" />
    </OnPlatform>

    <!-- Style dla Label -->
    <Style TargetType="Label" x:Key="LabelStyle">
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Style dla Button -->
    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource BackgroundColor}" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>

    <!-- Style dla Entry -->
    <Style TargetType="Entry" x:Key="EntryStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryColor}" />
    </Style>

    <!-- Style dla CollectionView -->
    <Style TargetType="CollectionView" x:Key="CollectionViewStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        <Setter Property="SelectionMode" Value="None" />
    </Style>

    <!-- Style dla ContentView -->
    <Style TargetType="ContentView" x:Key="ContentViewStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- Style dla CheckBox -->
    <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
        <Setter Property="Color" Value="{StaticResource PrimaryColor}" />
    </Style>
</ResourceDictionary>
