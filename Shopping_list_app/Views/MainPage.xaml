<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListApp.MainPage"
             BackgroundColor="#1E1E1E">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Shopping List" 
               FontSize="28" 
               TextColor="#E0E0E0" 
               HorizontalOptions="Center" 
               VerticalOptions="Start" />

        <Button Text="Add New Shopping List" 
                Clicked="AddShoppingListButton_Clicked" 
                TextColor="#FFFFFF" 
                BackgroundColor="#3B82F6" 
                CornerRadius="10" 
                HeightRequest="50" 
                FontSize="18" />

        <CollectionView ItemsSource="{Binding ShoppingLists}" Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" 
                           BorderColor="#5A5A5A" 
                           BackgroundColor="#2A2A2A" 
                           Padding="10" 
                           Margin="0,5,0,5">
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="10">
                            <Label Text="{Binding Name}" 
                                   TextColor="#FFFFFF" 
                                   FontSize="18" 
                                   VerticalOptions="Center" 
                                   HorizontalOptions="StartAndExpand" />

                            <Button Text="Open" 
                                    Clicked="OpenShoppingListButton_Clicked" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="#34D399" 
                                    TextColor="#FFFFFF" 
                                    CornerRadius="5" 
                                    WidthRequest="100" 
                                    HeightRequest="40" />

                            <Button Text="Delete" 
                                    Clicked="DeleteShoppingListButton_Clicked" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="#EF4444" 
                                    TextColor="#FFFFFF" 
                                    CornerRadius="5" 
                                    WidthRequest="100" 
                                    HeightRequest="40" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
