<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ShoppingListApp.Views"
             x:Class="ShoppingListApp.Views.ShoppingListView"
             BackgroundColor="#1E1E1E">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="{Binding Name}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="white" />

            <Button Text="Dodaj produkt" 
                    Clicked="AddProductButton_Clicked" 
                    BackgroundColor="#3B82F6" 
                    TextColor="white" 
                    HeightRequest="50" />

            <Button Text="Dodaj kategoriÄ™" 
                    Clicked="AddCategoryButton_Clicked" 
                    BackgroundColor="#3B82F6" 
                    TextColor="white" 
                    HeightRequest="50" />

            <CollectionView ItemsSource="{Binding Categories}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <views:CategoryView />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
